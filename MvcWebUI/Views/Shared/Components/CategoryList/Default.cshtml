@{
}
@model CategoryListViewModel
<h3>Kategoriler</h3>


<div class="list-group">
       <a href="/product/index" class="list-group-item">Tümünü Listele</a>
    @foreach (var catogory in Model.Categories)
    {
        var css = "list-group-item";
        if(catogory.CategoryId == Model.CurrentCategory)
        {
            css += " active";
        }


        <a href="/product/index?category=@catogory.CategoryId" class="@css">@catogory.CategoryName</a>

    }
</div>